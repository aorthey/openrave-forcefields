<robot name="point">
  <kinbody name="robot_point_mobile">

    <body name="base" type="dynamic">
        <translation>0 0 0</translation>
    </body>
    <body name="originX" type="dynamic">
      <offsetfrom>base</offsetfrom>
      <translation>0.0  0.0  0.0</translation>
    </body>
    <body name="originY" type="dynamic">
      <offsetfrom>base</offsetfrom>
      <translation>0.0  0.0  0.0</translation>
    </body>
    <body name="originZ" type="dynamic">
      <offsetfrom>base</offsetfrom>
      <translation>0.0  0.0  0.0</translation>
    </body>
    <body name="rotat0r" type="dynamic">
      <offsetfrom>base</offsetfrom>
      <translation>0.0  0.0  0.0</translation>
    </body>

    <body name="robot" type="dynamic">
      <offsetfrom>base</offsetfrom>
      <translation>0.0  0.0  0.1</translation>
      <mass type="cylinder">
        <total>5</total>
        <radius>0.01</radius>
        <height>0.01</height>
      </mass>
      <geom type="cylinder">
        <rotationaxis>1 0 0 90</rotationaxis>
        <radius>0.1</radius>
        <height>0.1</height>
        <diffusecolor>0.05 0.05 0.05</diffusecolor>
      </geom>
    </body>

    <body name="direct0r" type="dynamic">
      <offsetfrom>base</offsetfrom>
      <translation>-0.05  0.0  0.2</translation>
      <geom type="box">
        <extents>0.05 0.02 0.02</extents>
        <diffusecolor>0.05 0.95 0.05</diffusecolor>
      </geom>
    </body>

    <joint type="hinge" name="basejoint" enable="false">
      <body>base</body>
      <body>originX</body>
      <limits>0 0</limits>
    </joint>

    <Joint name="X" type="slider" enable="true">
        <Body>originX</Body>
        <Body>originY</Body>
        <Axis>1 0 0</Axis>
        <limits>-10 10</limits>
    </Joint>
    <Joint name="Y" type="slider" enable="true">
        <Body>originY</Body>
        <Body>originZ</Body>
        <Axis>0 1 0</Axis>
        <limits>-10 10</limits>
    </Joint>
    <Joint name="Z" type="slider" enable="true">
        <Body>originZ</Body>
        <Body>rotat0r</Body>
        <Axis>0 0 1</Axis>
        <limits>-0.2 0.2</limits>
    </Joint>
    <Joint circular="true" name="rot" type="hinge" enable="true">
        <Body>rotat0r</Body>
        <Body>robot</Body>
        <Axis>0 0 1</Axis>
    </Joint>

    <joint type="hinge" name="directionjoin" enable="false">
      <body>robot</body>
      <body>direct0r</body>
      <limits>0 0</limits>
    </joint>

  </kinbody>
</robot>
